@model Proyecto.net_core.Models.Entidades.Libro
@{
    ViewData["Title"] = "Crear";
    Layout = null;
}
<div class=" col-md-12">
    <div class=" card">
        <div class=" card-header text-center">
            <h5> Crear Autor</h5>
        </div>
        <div class=" card-body text-center">
            <form asp-action="Crear">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label></label>
                    <div class="form-group">
                        <label></label>
                        <input asp-for="titulo" class="form-control" placeholder=" Nombre" />
                        <span asp-validation-for="titulo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label></label>
                        <input asp-for="año" class="form-control" placeholder=" Nombre" />
                        <span asp-validation-for="año" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label></label>
                        <input asp-for="estado" class="form-control" placeholder=" Nombre" />
                        <span asp-validation-for="estado" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label></label>
                        <input asp-for="precio" class="form-control" placeholder=" Nombre" />
                        <span asp-validation-for="precio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label></label>
                        <input asp-for="fecha_registro" class="form-control" placeholder=" Nombre" />
                        <span asp-validation-for="fecha_registro" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label></label>
                        <input asp-for="url_libro" class="form-control" placeholder=" Nombre" />
                        <span asp-validation-for="url_libro" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label></label>
                        <input asp-for="URLImagen" class="form-control" placeholder=" Nombre" />
                        <span asp-validation-for="URLImagen" class="text-danger"></span>
                    </div>
                </div>
                <div class=" card-footer ">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


